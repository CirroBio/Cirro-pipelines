process {
    errorStrategy = 'retry'
    maxRetries = 3
    withLabel: cellranger {
        container = "quay.io/cumulus/cellranger:${params.cellranger_version}"
        beforeScript = ""
        cpus = { 4 * task.attempt }
        memory = { 30.GB * task.attempt }
    }
    withLabel: python {
        container = "quay.io/fhcrc-microbiome/python-pandas:4a6179f"
        beforeScript = ""
        cpus = 1
        memory = "4.GB"
    }
}